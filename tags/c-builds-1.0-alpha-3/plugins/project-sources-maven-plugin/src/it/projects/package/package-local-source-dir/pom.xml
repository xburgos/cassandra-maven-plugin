<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.codehaus.mojo.projectsources.it</groupId>
    <artifactId>it-project-parent</artifactId>
    <version>1</version>
  </parent>
  
  <artifactId>package-local-source-dir</artifactId>
  <name>package-local-source-dir</name>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>project-sources-maven-plugin</artifactId>
        
        <executions>
          <execution>
            <id>handle-project-sources</id>
            
            <goals>
              <goal>resolve-project-sources</goal>
              <goal>package-project-sources</goal>
            </goals>
            
            <configuration>
              <skipResolution>true</skipResolution>
              <projectDirIsSourceLocation>true</projectDirIsSourceLocation>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.codehaus.mojo.groovy.it</groupId>
    <artifactId>archetype-1</artifactId>
    <version>testing</version>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-clean-plugin</artifactId>
                    <version>2.1.1</version>
                </plugin>
            </plugins>
        </pluginManagement>
        
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <mkdir dir="${project.build.directory}"/>
                                
                                <!--
                                NOTE: Have to execute mvn in a seperate directory to prevent archetype:create
                                      from trying to update our pom :-(
                                -->
                                
                                <exec executable="${maven.home}/bin/mvn" dir="${project.build.directory}">
                                    <arg value="archetype:create"/>
                                    <arg value="-DarchetypeVersion=testing"/>
                                    <arg value="-DarchetypeGroupId=org.codehaus.mojo.groovy"/>
                                    <arg value="-DarchetypeArtifactId=groovy-mojo-archetype"/>
                                    <arg value="-DgroupId=org.codehaus.mojo"/>
                                    <arg value="-DpackageName=org.codehaus.mojo.myexample"/>
                                    <arg value="-DartifactId=myexample-maven-plugin"/>
                                </exec>
                                
                                <exec executable="${maven.home}/bin/mvn" dir="${project.build.directory}/myexample-maven-plugin">
                                    <arg value="package"/>
                                </exec>
                                
                                <!--
                                TODO: Need to invoke the plugin and make sure it works.
                                -->
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>


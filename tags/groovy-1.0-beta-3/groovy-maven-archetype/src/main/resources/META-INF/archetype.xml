<!-- $Id$ -->

<archetype>
    <id>groovymodule</id>

    <sources>
        <!--
        HACK: The groovy:compile goal normally finds sources under src/main/groovy,
              but the archetype plugin can only put Java-like sources into src/main/java.
        -->
        <source>src/main/java/MyExampleClass.groovy</source>
        <source>src/main/java/MySupportClass.java</source>
    </sources>

    <resources>
        <resource>pom.xml</resource>
    </resources>

    <siteResources>
        <resource>src/site/site.xml</resource>
        <resource>src/site/apt/index.apt</resource>
    </siteResources>
</archetype>

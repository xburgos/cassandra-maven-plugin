<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor id="netbeans-platform-app-archetype" partial="false" name="NetBeans Platform Application Archetype">
    <requiredProperties>
        <requiredProperty key="cluster" defaultValue="mavencluster"/>
        <requiredProperty key="brandingtoken" defaultValue="mavenbranding"/>
        <requiredProperty key="netbeans-install" defaultValue="path-to-netbeans-platform-installation"/>
    </requiredProperties>
    <fileSets>
        <fileSet filtered="true">
            <directory></directory>
            <includes>
                <include>profiles.xml</include>
                <include>nbactions.xml</include>
                <include>src/main/assembly/*.*</include>
                <include>src/main/nbm-branding/**/*.properties</include>
            </includes>
        </fileSet>
        <fileSet filtered="false">
            <directory>src/main/nbm-branding</directory>
            <includes>
                <include>**/*.gif</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>module1/src/main/resources</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>module1/src/main/nbm</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>module1</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>module1/src/main/java</directory>
            <includes>
                <include>**/deleteme.txt</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>module1/src/test/java</directory>
            <includes>
                <include>**/deleteme.txt</include>
            </includes>
        </fileSet>
        
    </fileSets>
</archetype-descriptor>
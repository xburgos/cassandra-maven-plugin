<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    
    <groupId>org.codehaus.mojo.groovy.it</groupId>
    <artifactId>execute-props-1</artifactId>
    <version>testing</version>
    
    <description>
        Verify that properties defined in a pom expand correctly.
    </description>
    
    <properties>
        <prop1>${prop2}</prop1>
        <prop2>${prop3}</prop2>
        <prop3>${project}</prop3>
    </properties>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo.groovy</groupId>
                <artifactId>groovy-maven-plugin</artifactId>
                <version>testing</version>
                
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <source>
                                <body>
                                    import org.apache.maven.project.MavenProject
                                    
                                    println "prop1: " + project.properties['prop1']
                                    println "prop3: " + project.properties['prop3']
                                    
                                    assert project.properties['prop1'] instanceof MavenProject
                                    assert project.properties['prop3'] instanceof MavenProject
                                    
                                    def proj = project.properties['prop1']
                                    assert proj != null
                                    assert proj.artifactId == project.artifactId
                                    
                                    //
                                    // FIXME: Due to the way we use the expresion muck, we can't
                                    //        actually pick up the base properties completly
                                    //
                                    
                                    // Test that we can get unresolved properties too
                                    assert project.properties.lookup('prop1') == '${project}'
                                </body>
                            </source>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
</project>


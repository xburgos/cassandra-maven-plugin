<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.sourceforge.log4c</groupId>
  <artifactId>log4c</artifactId>
  <version>1.0.10</version>
  <packaging>rpm</packaging>
  
  <dependencies>
    <dependency>
      <groupId>org.libexpat</groupId>
      <artifactId>expat</artifactId>
      <version>1.95.8</version>
      <type>rpm</type>
    </dependency>
  </dependencies>

  <parent>
    <groupId>com.myco.m2</groupId>
    <artifactId>cpkg-archive-em</artifactId>
    <version>2.1-SNAPSHOT</version>
  </parent>
  
  <properties>
   <release>2</release>
  </properties>
  
  <build>
    <plugins>
      <plugin>
      <groupId>org.codehaus.mojo</groupId>
      <artifactId>patch-maven-plugin</artifactId>
      <configuration>
      <patchSourceDir>${basedir}/src/patches</patchSourceDir>
      <patches>
        <patchFile>${srcBase}-nodocs.patch</patchFile>
        <patchFile>${srcBase}-function.patch</patchFile>
        <patchFile>${srcBase}-test.patch</patchFile>
        <patchFile>${srcBase}-macro.patch</patchFile>
        <patchFile>${srcBase}-pkgconfig.patch</patchFile>
      </patches>
      </configuration>
    </plugin>
    
    <plugin>
      <groupId>org.codehaus.mojo</groupId>
      <artifactId>make-maven-plugin</artifactId>
      <configuration>
        <configOptions>
          <configOption implementation="java.lang.String">--with-expat=@pathOf(org.libexpat:expat)@</configOption>
        </configOptions>
       </configuration>
     </plugin>
   </plugins>
 </build>
</project>

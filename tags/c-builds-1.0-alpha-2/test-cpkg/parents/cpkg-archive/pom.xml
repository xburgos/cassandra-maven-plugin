<?xml version="1.0"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.myco.m2</groupId>
  <artifactId>cpkg-archive</artifactId>
  <version>2.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <parent>
    <groupId>com.myco.m2</groupId>
    <artifactId>cpkg</artifactId>
    <version>2.1-SNAPSHOT</version>
  </parent>

  <properties>
    <srcBase>${artifactId}-${version}</srcBase>
    <srcURLBase>${basedir}</srcURLBase>
    <srcURLPath>src/releases</srcURLPath>
    <srcURLSuffix>tar.gz</srcURLSuffix>
    <srcURLFile>${artifactId}-${version}.${srcURLSuffix}</srcURLFile>
    <srcURL>${srcURLBase}/${srcURLPath}/${srcURLFile}</srcURL>
    <workDir>${project.build.directory}/${artifactId}-${version}</workDir>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>multibuild-optimizer-maven-plugin</artifactId>
        <configuration>
          <checkArtifact>true</checkArtifact>
          <archiveUrl>${srcURL}</archiveUrl>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>patch-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>get-patch</id>
            <phase>initialize</phase>
            <goals>
              <goal>get</goal>
            </goals>
          </execution>
          <execution>
            <id>apply-patch</id>
            <phase>process-sources</phase>
            <goals>
              <goal>apply</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <workDir>${workDir}</workDir>
          <patchingEnabled>true</patchingEnabled>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>remote-source-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>locate-source-archive</id>
            <phase>initialize</phase>
            <goals>
              <goal>get</goal>
            </goals>
            <configuration>
              <url>${srcURL}</url>
            </configuration>
          </execution>
          <execution>
            <id>unpack</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <sourceArchive>${srcURL}</sourceArchive>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>make-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>configure</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>configure</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.myco</groupId>
  <artifactId>myutil</artifactId>
  <version>0.0.2</version>
  <packaging>rpm</packaging>
  
  <dependencies>
    <dependency>
      <groupId>net.sourceforge.log4c</groupId>
      <artifactId>log4c</artifactId>
      <version>1.0.10</version>
      <type>rpm</type>
    </dependency>
  </dependencies>

  <parent>
    <groupId>com.myco.m2</groupId>
    <artifactId>cpkg-archive-em</artifactId>
    <version>2.1-SNAPSHOT</version>
  </parent>
    
  <build>
    <plugins>    
    <plugin>
      <groupId>org.codehaus.mojo</groupId>
      <artifactId>make-maven-plugin</artifactId>
      <configuration>
        <configOptions>
          <configOption implementation="java.lang.String">--with-log4c=@pathOf(net.sourceforge.log4c:log4c)@</configOption>
        </configOptions>
       </configuration>
     </plugin>
   </plugins>
 </build>
</project>

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <groupId>org.codehaus.mojo</groupId>
  <artifactId>maven-springbeandoc-plugin</artifactId>
  <version>1.0.8-SNAPSHOT</version>
  <parent>
    <groupId>org.codehaus.mojo</groupId>
    <artifactId>mojo-sandbox</artifactId>
    <version>4-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <packaging>maven-plugin</packaging>
  <name>Spring BeanDoc Plugin</name>
  <description>${project.name} is a Maven plugin for Spring BeanDoc</description>
  <inceptionYear>2006</inceptionYear>
  <developers>
    <developer>
      <id>jdlandsh</id>
      <name>Jurgen De Landsheer</name>
      <email>Jurgen.DeLandsheer@UGent.be</email>
      <organization>UGent</organization>
      <organizationUrl>http://www.UGent.be/</organizationUrl>
      <roles>
        <role>Initial plugin author</role>
      </roles>
      <timezone>+1</timezone>
    </developer>
    <developer>
      <id>slonopotamus</id>
      <name>Marat Radchenko</name>
      <email>slonopotamusorama@gmail.com</email>
      <url>http://slonopotamus.org</url>
      <roles>
        <role>Developer</role>
      </roles>
      <timezone>+3</timezone>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>The MIT License</name>
      <!-- TODO: maven-docck-plugin complains about bad url -->
      <url>LICENSE.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <url>http://mojo.codehaus.org/${project.artifactId}</url>
  <repositories>
    <repository>
      <id>slono-repo</id>
      <url>http://maven2.slonopotamus.org</url>
    </repository>
  </repositories>
  <!-- TODO: find why parent pom generates another urls -->
  <scm>
    <url>http://svn.mojo.codehaus.org/browse/mojo/trunk/mojo/mojo-sandbox/${project.artifactId}/</url>
    <connection>scm:svn:http://svn.codehaus.org/mojo/trunk/mojo/mojo-sandbox/${project.artifactId}/</connection>
    <developerConnection>scm:svn:https://svn.codehaus.org/mojo/trunk/mojo/mojo-sandbox/${project.artifactId}/</developerConnection>
  </scm>
  <dependencies>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-beans</artifactId>
      <version>2.0.2</version>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-core</artifactId>
      <version>2.0.2</version>
    </dependency>
    <dependency>
      <groupId>org.springframework.beandoc</groupId>
      <artifactId>spring-beandoc</artifactId>
      <version>0.8-SPRING2</version>
    </dependency>
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-project</artifactId>
      <version>2.0.2</version>
    </dependency>
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
      <version>3.1</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
      <version>2.0.2</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven.reporting</groupId>
      <artifactId>maven-reporting-api</artifactId>
      <version>2.0.2</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven.reporting</groupId>
      <artifactId>maven-reporting-impl</artifactId>
      <version>2.0.2</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>${source}</source>
          <target>${target}</target>
          <encoding>${encoding}</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <configuration>
          <encoding>${encoding}</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-idea-plugin</artifactId>
        <configuration>
          <jdkLevel>${source}</jdkLevel>
          <downloadSources>true</downloadSources>
          <downloadJavadocs>true</downloadJavadocs>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-pmd-plugin</artifactId>
        <configuration>
          <targetJdk>${target}</targetJdk>
          <sourceEncoding>${encoding}</sourceEncoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>${project.groupId}</groupId>
        <artifactId>${project.artifactId}</artifactId>
        <version>${project.version}</version>
        <configuration>
          <resources>
            <resource>src/test/resources/beandocxmldir/applicationContext-hibernate.xml</resource>
          </resources>
          <title>${project.name} ${project.version} Bean docs</title>
          <javadocLocations>
            <javadocLocation>
              <packagename>org.codehaus.mojo.springbeandoc</packagename>
              <location>${project.build.directory}/site/apidocs</location>
            </javadocLocation>
          </javadocLocations>
          <executable>${graphVizExecutable}</executable>
          <graphsOutputType>png</graphsOutputType>
        </configuration>
      </plugin>
    </plugins>
  </reporting>
  <properties>
    <source>1.5</source>
    <target>${source}</target>
    <encoding>UTF-8</encoding>
    <graphVizExecutable>/usr/bin/dot</graphVizExecutable>
  </properties>
</project>
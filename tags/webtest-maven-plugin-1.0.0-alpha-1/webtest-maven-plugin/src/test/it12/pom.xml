<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.codehaus.mojo.webtest</groupId>
  <artifactId>it12</artifactId>
  <version>0.1.0</version>
  <name>Integration Test 12</name>
  <description>
    Demonstrates ignoring errors/failures and setting the trace level to 'error' to have less verbose output. The
    test reflects a "classic" (i.e. ANT based) webtest script by including entity references to externalize the
    configuration. Just run "mvn clean site".
  </description>  
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>webtest-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>pre-site</phase>
            <goals>
              <goal>test</goal>
            </goals>
          </execution>
        </executions>        
        <configuration>
          <host>www.springsource.com</host>
          <port>80</port>
          <basepath>training</basepath>
          <haltonfailure>true</haltonfailure>
          <haltonerror>true</haltonerror>
          <loglevel>error</loglevel>
        </configuration>
      </plugin>       
    </plugins>
  </build>  
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>webtest-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>
</project>

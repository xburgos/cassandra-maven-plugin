<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.libexpat</groupId>
  <artifactId>expat</artifactId>
  <version>1.95.8</version>
  <packaging>rpm</packaging>
  
  <parent>
    <groupId>com.myco.m2</groupId>
    <artifactId>cpkg</artifactId>
    <version>2.1-SNAPSHOT</version>
    <relativePath>../parents/cpkg/pom.xml</relativePath>
  </parent>

  <properties>
    <uses-buildFromSourceArchive>true</uses-buildFromSourceArchive>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>make-maven-plugin</artifactId>
        <configuration>
          <installOptions>
             <installOption implementation="java.lang.String">prefix="${installDestDir}${prefix}"</installOption>
          </installOptions>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>patch-maven-plugin</artifactId>
        <configuration>
          <patches>
            <patch>expat-1.95.8-pkgconfig.patch</patch>
          </patches>
        </configuration>
      </plugin>
    </plugins>
 </build>
</project>

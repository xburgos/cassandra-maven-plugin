<project>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>solaris-maven-plugin</artifactId>
        <version>1.0-alpha-1-SNAPSHOT</version>
        <configuration>
          <packageRoot>${basedir}/target/project-2/solaris/assembled-pkg</packageRoot>
          <defaultUser>mysystem</defaultUser>
          <defaultGroup>mysystem</defaultGroup>
          <prototypeEntryCollections>
            <prototypeEntryCollection>
              <type>dir</type>
              <mode>?</mode>
              <user>?</user>
              <group>?</group>
              <includes>
                <include>opt</include>
                <include>opt/jb</include>
              </includes>
            </prototypeEntryCollection>
            <prototypeEntryCollection>
              <type>file</type>
              <mode>0755</mode>
              <includes>
                <include>opt/jb/tips-handler/bin/*</include>
              </includes>
            </prototypeEntryCollection>
            <prototypeEntryCollection>
              <type>file</type>
              <includes>
                <include>opt/jb/tips-handler/etc/*</include>
              </includes>
            </prototypeEntryCollection>
            <prototypeEntryCollection>
              <type>editable</type>
              <class>conf</class>
              <includes>
                <include>opt/jb/tips-handler/etc/config.properties</include>
              </includes>
            </prototypeEntryCollection>
            <prototypeEntryCollection>
              <type>file</type>
              <class>conf</class>
              <includes>
                <include>opt/jb/tips-handler/etc/jetty-context.xml</include>
              </includes>
            </prototypeEntryCollection>
          </prototypeEntryCollections>
          <prototypeEntries>
            <iPrototypeEntry>
              <path>i.jbconf</path>
              <realPath>../../solaris-pkg-support/i.jbconf</realPath>
            </iPrototypeEntry>
            <iPrototypeEntry>
              <path>r.jbconf</path>
              <realPath>../../solaris-pkg-support/r.jbconf</realPath>
            </iPrototypeEntry>
          </prototypeEntries>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>

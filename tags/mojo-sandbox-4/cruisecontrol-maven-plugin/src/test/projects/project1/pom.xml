<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.codehaus.mojo.cruisecontrol.testprojects</groupId>
	<artifactId>project1</artifactId>
	<version>1.0</version>
	<name>project1</name>
	<modules>
		<module>module1</module>
		<module>module2</module>
	</modules>
	<packaging>pom</packaging>
	<ciManagement>
		<system>cruisecontrol</system>
		<url>http://localhost:8080/</url>
		<notifiers>
			<notifier>
				<type>htmlemail</type>
				<sendOnFailure />
				<sendOnSuccess />
				<configuration>
					<address>kaare.nilsen@gmail.com</address>
				</configuration>
			</notifier>
			<notifier>
				<type>htmlemail</type>
				<sendOnFailure />
				<configuration>
					<address>kaare.nilsen@objectware.no</address>
				</configuration>
			</notifier>
		</notifiers>
	</ciManagement>
	<scm>
		<connection>scm:svn:svn://localhost/project1</connection>
	</scm>
	<developers>
		<developer>
			<id>kaare</id>
			<name>Kaare Nilsen</name>
			<email>kaare.nilsen@gmail.com</email>
			<organization>Objectware</organization>
			<organizationUrl>http://www.objectware.no</organizationUrl>
			<roles>
				<role>Java Developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
	</developers>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cruisecontrol-maven-plugin</artifactId>
				<version>1.0-SNAPSHOT</version>
				<configuration>
					<numberOfBuildThreads>10</numberOfBuildThreads>
					<globalEmailSettings>
						<htmlemail>true</htmlemail>
						<maps>
							<map>
								<alias>kaare</alias>
								<address>kaare.nilsen@gmail.com</address>
							</map>
						</maps>
						<successes>
							<success>kaare.nilsen@gmail.com</success>
							<success>kaare.nilsen@objectware.no</success>
						</successes>
						<failures>
							<failure>kaare.nilsen@objectware.no</failure>
							<failure>kaare.nilsen@gmail.com</failure>
						</failures>
					</globalEmailSettings>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>

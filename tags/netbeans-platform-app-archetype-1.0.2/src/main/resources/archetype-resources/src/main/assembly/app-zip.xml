<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>app</id>
  <formats>
      <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
        <directory>target/netbeans_clusters</directory>
        <outputDirectory>${artifactId}</outputDirectory>
        <includes>
            <include>**</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>${netbeans.installation.directory}</directory>
        <outputDirectory>${artifactId}</outputDirectory>
        <includes>
            <include>bin/**</include>
            <include>etc/**</include>
            <include>platform*/**</include>
            <!-- add any other cluster you want to add.
               include>enterprise*/**</include-->
        </includes>
    </fileSet>
    <fileSet>
        <directory>src/main/assembly</directory>
        <outputDirectory>${artifactId}/etc</outputDirectory>
        <includes>
            <include>netbeans.clusters</include>
        </includes>
    </fileSet>
  </fileSets>
</assembly>
<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>bar</groupId>
  <artifactId>jetty</artifactId>
  <version>1.1-2</version>
  <name>Jetty Servlet Container</name>
  <description>Open-source, standards-based, full-featured web server implemented entirely in Java.</description>
  <licenses>
    <license>
      <name>BSD</name>
    </license>
  </licenses>
  <dependencies>
    <dependency>
      <groupId>org.mortbay.jetty</groupId>
      <artifactId>jetty-assembly</artifactId>
      <version>7.0.0pre3</version>
      <type>zip</type>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>unix-maven-plugin</artifactId>
        <version>testing</version>
        <executions>
          <execution>
            <goals>
              <goal>package-dpkg-attached</goal>
              <goal>package-pkg-attached</goal>
              <goal>package-rpm-attached</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <contact>Trygve Laugstol</contact>
          <contactEmail>trygvis@codehaus.org</contactEmail>
          <defaults>
            <fileUser>jetty</fileUser>
            <fileGroup>jetty</fileGroup>
            <directoryUser>jetty</directoryUser>
            <directoryGroup>jetty</directoryGroup>
          </defaults>
          <dpkg>
            <section>devel</section>
          </dpkg>
          <rpm>
            <softwareGroup>Application/Collectors</softwareGroup>
          </rpm>
          <assembly>
            <extract>
              <artifact>org.mortbay.jetty:jetty-assembly:zip</artifact>
              <toDir>/opt/jetty</toDir>
              <pattern>/jetty-7.0.0pre3(.*)</pattern>
              <replacement>$1</replacement>
            </extract>
            <extract>
              <artifact>org.mortbay.jetty:jetty-assembly:zip</artifact>
              <toDir>/opt/jetty</toDir>
              <pattern>/jetty-7.0.0pre3/bin/(.*)</pattern>
              <replacement>bin/$1</replacement>
              <fileMode>0755</fileMode>
            </extract>
            <!-- this should be below:
            <extract>
              <artifact>org.mortbay.jetty:jetty-assembly:zip</artifact>
              <toDir>/opt/jetty</toDir>
              <pattern>/jetty-7.0.0pre3/LICENSES/(.*)</pattern>
              <replacement>share/license/$1</replacement>
            </extract>
            -->
            <!--
            <extract>
              <artifact>org.mortbay.jetty:jetty-assembly:zip</artifact>
              <toBasedir>/opt/jetty/share/licenses</toBasedir>
              <includes>
                <include>/jetty-7.0.0pre3/LICENSES/*</include>
              </includes>
            </extract>
            -->

            <!-- THE example
            <extract>
              <artifact>org.mortbay.jetty:jetty-assembly:zip</artifact>
              <toBasedir>/opt/jetty</toBasedir>
              <includes>
                <include>**/bin/*</include>
              </includes>
              <excludes>
                <exclude>**/kuk/*</exclude>
              </excludes>
              <renames>
                <rename>
                  <from>
                  <to>
                </rename>
                <rename>
                  <from>
                  <to>
                </rename>
              </renames>
            </extract>
            <extract>
              <artifact>org.mortbay.jetty:jetty-assembly:zip</artifact>
              <toBasedir>/opt/jetty/share/licenses</toBasedir>
              <includes>
                <include>/jetty-7.0.0pre3/LICENSES/*</include>
              </includes>
            </extract>
            -->
            <mkdirs>
              <paths>
                <path>/var/opt/jetty</path>
                <path>/var/opt/jetty/cache</path>
                <path>/var/opt/jetty/log</path>
              </paths>
            </mkdirs>
            <mkdir>
              <path>/var/opt/jetty/test-directory</path>
            </mkdir>
            <!--
            <chmod>
              <mode>0755</mode>
            </chmod>
            -->
          </assembly>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>

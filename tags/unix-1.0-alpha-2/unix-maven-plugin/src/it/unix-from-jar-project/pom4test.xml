<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>bar</groupId>
  <artifactId>project-uber-1</artifactId>
  <version>1.1-2</version>
  <name>Uber Project</name>
  <licenses>
    <license>
      <name>BSD</name>
    </license>
  </licenses>
  <dependencies>
    <dependency>
      <groupId>org.jvnet.hudson.main</groupId>
      <artifactId>hudson-war</artifactId>
      <version>1.255</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.codehaus.mojo.unix.it</groupId>
      <artifactId>my-native</artifactId>
      <version>1.0</version>
      <type>so</type>
      <classifier>${os.name}-${os.version}-${os.arch}</classifier>
    </dependency>
  </dependencies>
  <repositories>
    <repository>
      <id>java.net</id>
      <url>http://download.java.net/maven/2</url>
    </repository>
  </repositories>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>appassembler-maven-plugin</artifactId>
        <version>1.0-beta-1</version>
        <executions>
          <execution>
<!--
            <phase>generate-resources</phase>
-->
            <goals>
              <goal>assemble</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <programs>
            <program>
              <mainClass>unix.Hello</mainClass>
              <name>hello</name>
            </program>
          </programs>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>unix-maven-plugin</artifactId>
        <version>testing</version>
        <executions>
          <execution>
            <goals>
              <goal>package-dpkg-attached</goal>
              <goal>package-pkg-attached</goal>
              <goal>package-rpm-attached</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <contact>Trygve Laugstol</contact>
          <contactEmail>trygvis@codehaus.org</contactEmail>
          <defaults>
            <fileAttributes>
              <user>hudson</user>
              <group>hudson</group>
              <mode>044</mode>
            </fileAttributes>
          </defaults>
          <dpkg>
            <section>devel</section>
          </dpkg>
          <rpm>
            <softwareGroup>Application/Collectors</softwareGroup>
          </rpm>
          <assembly>
            <copy>
              <artifact>org.jvnet.hudson.main:hudson-war:war</artifact>
              <toFile>/usr/share/hudson/lib/hudson.war</toFile>
            </copy>
            <copy>
              <artifact>org.codehaus.mojo.unix.it:my-native:so:${os.name}-${os.version}-${os.arch}</artifact>
              <toFile>/usr/share/hudson/lib/my-native.so</toFile>
            </copy>
            <copy>
              <path>target/appassembler</path>
              <toDir>/usr/share/hello</toDir>
            </copy>
          </assembly>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>

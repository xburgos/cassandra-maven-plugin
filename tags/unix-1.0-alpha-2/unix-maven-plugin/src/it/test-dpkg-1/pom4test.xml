<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>bar</groupId>
  <artifactId>project-dpkg-1</artifactId>
  <version>1.1-2</version>
  <packaging>dpkg</packaging>
  <dependencies>
    <dependency>
      <groupId>org.jvnet.hudson.main</groupId>
      <artifactId>hudson-war</artifactId>
      <version>1.255</version>
      <type>war</type>
    </dependency>
  </dependencies>
  <repositories>
    <repository>
      <id>java.net</id>
      <url>http://download.java.net/maven/2</url>
    </repository>
  </repositories>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>unix-maven-plugin</artifactId>
        <version>testing</version>
        <extensions>true</extensions>
        <configuration>
          <contact>Trygve Laugstol</contact>
          <contactEmail>trygvis@codehaus.org</contactEmail>
          <dpkg>
            <section>devel</section>
          </dpkg>
          <assembly>
            <copy>
              <artifact>org.jvnet.hudson.main:hudson-war:war</artifact>
              <toFile>/usr/share/hudson/lib/hudson.war</toFile>
              <fileAttributes>
                <user>hudson</user>
                <group>hudson</group>
                <mode>0644</mode>
              </fileAttributes>
            </copy>
          </assembly>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
